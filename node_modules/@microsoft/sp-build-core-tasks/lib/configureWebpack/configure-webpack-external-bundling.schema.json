{
  "title": "Configure Externals Webpack Task Configuration",
  "description": "Defines parameters for the task which configures the webpack task when compiling localized resources",

  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },

    "localizedResources": {
      "title": "Localized Resources",
      "description": "List of localized externals",
      "type": "array",
      "items": {
        "type": "string"
      }
    },

    "buildSingleLocale": {
      "title": "Build Single Locale",
      "description": "If specified, only use this locale.",
      "type": "string"
    },

    "bundleAllLocalizedResources": {
      "title": "Bundle All Localized Resources",
      "description": "Bundles all of the specified localized resources into locale-specific entry bundles",
      "type": "boolean"
    },

    "additionalLoaders": {
      "title": "Addition webpack loaders to register",
      "description": "Additional webpack loaders",
      "oneOf": [
        {
          "type": "string"
        },
        {
        "type": "array",
        "items": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "exclude": {
              "oneOf": [
                {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                {
                  "type": "string"
                }
              ]
            },
            "include": {
              "oneOf": [
                {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                {
                  "type": "string"
                }
              ]
            },
            "test": {
              "oneOf": [
                {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                {
                  "type": "string"
                }
              ]
            },
            "loader": {
              "type": "string"
            },
            "query": {
              "type": "object"
            }
          }
        }
      }]
    },

    "minifyInProduction": {
      "title": "Minify in production",
      "description": "If set to true, minify the produced bundles during production builds. This may add significant build time without improving output size.",
      "type": "boolean"
    }
  }
}